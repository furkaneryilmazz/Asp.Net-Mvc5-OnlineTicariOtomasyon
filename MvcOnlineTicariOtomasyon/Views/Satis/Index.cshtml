@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<SatisHareket>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<table id="tbl1" class="table table-bordered" style="margin-top:20px; ">
    <thead>
        <tr>
            <th>ID</th>
            <th>Ürün</th>
            <th>Cari</th>
            <th>Personel</th>
            <th>Adet</th>
            <th>Fiyat</th>
            <th>Toplam</th>
            <th>Tarih</th>
            <th>Güncelle</th>
            <th>Detaylar</th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.SatisId
            </td>
            <td>
                @item.Urun.UrunAd
            </td>
            <td>
                @item.Cariler.CariAd @item.Cariler.CariSoyad
            </td>
            <td>
                @item.Personel.PersonelAd @item.Personel.PersonelSoyad
            </td>
            <td>
                @item.Adet
            </td>
            <td>
                @item.Fiyat
            </td>
            <td>
                @item.ToplamTutar
            </td>
            <td>
                @item.Tarih
            </td>
            <td><a href="/Satis/SatisGetir/@item.SatisId" class="btn btn-success">Güncelle</td>
            <td><a href="/Satis/SatisDetay/@item.SatisId" class="btn btn-success" style="background-color:darkviolet; color:white;">Detaylar</td>
        </tr>
    }
</table>

<a href="/Satis/YeniSatis/" class="btn btn-primary">Yeni Satış Yap</a>

